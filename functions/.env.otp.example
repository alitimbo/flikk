# OTP core
OTP_DEFAULT_COUNTRY_CODE=227
OTP_CODE_LENGTH=6
OTP_EXPIRES_IN_SEC=300
OTP_RESEND_SECONDS=30
OTP_MAX_ATTEMPTS=5
OTP_RATE_WINDOW_SECONDS=600
OTP_MAX_PER_WINDOW=5
OTP_LOCK_MINUTES=30

# SMS provider
OTP_SMS_API_URL=https://your-sms-provider.example.com/send
OTP_SMS_API_TOKEN=replace_me
OTP_SMS_HTTP_METHOD=POST
OTP_SMS_TOKEN_HEADER=Authorization
OTP_SMS_TOKEN_PREFIX=Bearer
OTP_SMS_TO_FIELD=to
OTP_SMS_MESSAGE_FIELD=message
OTP_SMS_SENDER_FIELD=sender
OTP_SMS_SENDER=FLIKK
OTP_SMS_TIMEOUT_MS=15000

# Optional JSON merged into payload. Example:
# OTP_SMS_EXTRA_PAYLOAD_JSON={"channel":"sms","priority":"normal"}
OTP_SMS_EXTRA_PAYLOAD_JSON=

# Message template placeholders: {{code}} and {{minutes}}
OTP_SMS_MESSAGE_TEMPLATE=Votre code Flikk est {{code}}. Ce code expire dans {{minutes}} min.
